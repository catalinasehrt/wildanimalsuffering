{
    "env": {
        "browser": true,
        "es2021": true,
        "amd": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", "jest"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": "off",
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        /* testing rules */
        "jest/no-identical-title": "error",
        "jest/valid-expect": "error"
    },
    "settings": {
        "jest": {
            "globalAliases": {
                "describe": ["context"],
                "fdescribe": ["fcontext"],
                "xdescribe": ["xcontext"]
            }
        }
    }
}
